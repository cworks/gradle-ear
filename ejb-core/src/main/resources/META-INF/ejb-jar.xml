<?xml version='1.0' encoding='UTF-8'?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0">
 	<enterprise-beans>
    	<message-driven>
      		<display-name>Report Server AdHoc Request Handler</display-name>
      		<ejb-name>ReportServerAdHocRequestHandlerBean</ejb-name>
      		<ejb-class>com.nhin.reportserver.ejb.ReportServerMDB</ejb-class>
      		
      		<transaction-type>Container</transaction-type>
      		
			<activation-config>
				<activation-config-property>
					<activation-config-property-name>acknowledgeMode</activation-config-property-name>
					<activation-config-property-value>Auto-acknowledge</activation-config-property-value>
				</activation-config-property>
				<activation-config-property>
					<activation-config-property-name>destinationType</activation-config-property-name>
					<activation-config-property-value>javax.jms.Queue</activation-config-property-value>
				</activation-config-property>
			</activation-config>
      
     		<resource-ref>
				<res-ref-name>arv2.prepost</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
  			<resource-ref>
				<res-ref-name>arv2.reportConcurrency</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
			<resource-ref>
				<res-ref-name>arv2.agingReportConcurrency</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
			<resource-ref>
				<res-ref-name>arv2.calendarConcurrency</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
    	</message-driven>
    
   	 	<message-driven>
      		<display-name>Report Server ReportSet Request Handler</display-name>
      		<ejb-name>ReportServerReportSetRequestHandlerBean</ejb-name>
      		<ejb-class>com.nhin.reportserver.ejb.ReportServerMDB</ejb-class>
      		
      		<transaction-type>Container</transaction-type>
      		
			<activation-config>
				<activation-config-property>
					<activation-config-property-name>acknowledgeMode</activation-config-property-name>
					<activation-config-property-value>Auto-acknowledge</activation-config-property-value>
				</activation-config-property>
				<activation-config-property>
					<activation-config-property-name>destinationType</activation-config-property-name>
					<activation-config-property-value>javax.jms.Queue</activation-config-property-value>
				</activation-config-property>
			</activation-config>
 		
  			<resource-ref>
				<res-ref-name>arv2.prepost</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
  			<resource-ref>
				<res-ref-name>arv2.reportConcurrency</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
			<resource-ref>
				<res-ref-name>arv2.agingReportConcurrency</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
			<resource-ref>
				<res-ref-name>arv2.calendarConcurrency</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
      
	    </message-driven>
    
    	<message-driven>
      		<display-name>Report Server LongRunning Request Handler</display-name>
      		<ejb-name>ReportServerLongRunningRequestHandlerBean</ejb-name>
      		<ejb-class>com.nhin.reportserver.ejb.ReportServerMDB</ejb-class>
      		
      		<transaction-type>Container</transaction-type>
      		
			<activation-config>
				<activation-config-property>
					<activation-config-property-name>acknowledgeMode</activation-config-property-name>
					<activation-config-property-value>Auto-acknowledge</activation-config-property-value>
				</activation-config-property>
				<activation-config-property>
					<activation-config-property-name>destinationType</activation-config-property-name>
					<activation-config-property-value>javax.jms.Queue</activation-config-property-value>
				</activation-config-property>
			</activation-config>
       
	  		<resource-ref>
				<res-ref-name>arv2.prepost</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
			<resource-ref>
				<res-ref-name>arv2.reportConcurrency</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
			<resource-ref>
				<res-ref-name>arv2.agingReportConcurrency</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
			<resource-ref>
				<res-ref-name>arv2.calendarConcurrency</res-ref-name>
				<res-type>commonj.work.WorkManager</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
    	</message-driven>
  	</enterprise-beans>
  	
  	<assembly-descriptor>
    	<container-transaction>
      		<method>
	        	<ejb-name>ReportServerAdHocRequestHandlerBean</ejb-name>
    	    	<method-name>*</method-name>
      		</method>
      		<trans-attribute>NotSupported</trans-attribute>
    	</container-transaction>
    	<container-transaction>
      		<method>
	        	<ejb-name>ReportServerReportSetRequestHandlerBean</ejb-name>
    	    	<method-name>*</method-name>
      		</method>
      		<trans-attribute>NotSupported</trans-attribute>
    	</container-transaction>
     	<container-transaction>
      		<method>
	        	<ejb-name>ReportServerLongRunningRequestHandlerBean</ejb-name>
    	    	<method-name>*</method-name>
      		</method>
      		<trans-attribute>NotSupported</trans-attribute>
    	</container-transaction>
    </assembly-descriptor>
  	
</ejb-jar>
